# ===================================
# SECURITY CONFIGURATION TEMPLATE
# ===================================
# Copy this file to .env and fill in your actual values

# ===================================
# PAYPAL PAYMENT INTEGRATION
# ===================================
# PayPal Client ID for payment processing
# Get your Client ID from https://developer.paypal.com/
# This is your unique identifier for PayPal API integration
REACT_APP_PAYPAL_CLIENT_ID=your_sandbox_client_id_here

# PayPal Environment Mode
# Use 'sandbox' for testing, 'live' for production
# Sandbox allows testing with fake transactions
REACT_APP_PAYPAL_ENVIRONMENT=sandbox

# ===================================
# COUPON SYSTEM CONFIGURATION
# ===================================
# Enable or disable the coupon system
# Set to 'true' to enable coupons, 'false' to disable
# When disabled, coupon input will not appear in checkout
REACT_APP_ENABLE_COUPONS=true

# ===================================
# CONTACT FORM INTEGRATION
# ===================================
# Formspree Form ID for contact form submissions
# Get your form ID from https://formspree.io/
# Used to send contact form data to your email
REACT_APP_FORMSPREE_FORM_ID=your_formspree_form_id_here

# ===================================
# SOCIAL MEDIA LINKS
# ===================================
# Your company's social media profile URLs
# These appear in footer and contact sections
REACT_APP_LINKEDIN_URL=https://linkedin.com/company/yourcompany
REACT_APP_TWITTER_URL=https://twitter.com/yourcompany
REACT_APP_GITHUB_URL=https://github.com/yourcompany

# ===================================
# EXTERNAL RESOURCES
# ===================================
# Hero image URL for landing page background
# Use high-quality images from Unsplash or your CDN
REACT_APP_HERO_IMAGE_URL=https://your-image-url.com/image.jpg

# ===================================
# EMAIL SERVICE CONFIGURATION
# ===================================
# EmailJS Configuration for sending emails from frontend
# Get your keys from https://www.emailjs.com/
REACT_APP_EMAILJS_SERVICE_ID=your_emailjs_service_id
REACT_APP_EMAILJS_TEMPLATE_ID=your_emailjs_template_id
REACT_APP_EMAILJS_PUBLIC_KEY=your_emailjs_public_key

# Email settings for enrollment confirmations
REACT_APP_FROM_EMAIL=noreply@tuneparams.com
REACT_APP_SUPPORT_EMAIL=contact@tuneparams.com

# ===================================
# BACKEND API CONFIGURATION (Future Use)
# ===================================
# Uncomment when backend API is ready
# REACT_APP_API_URL=http://localhost:3001/api
# REACT_APP_API_KEY=your_api_key_here

# ===================================
# COMPANY INFORMATION
# ===================================
# Your company details used throughout the app
# These appear in contact forms, footers, and branding
REACT_APP_COMPANY_NAME=TuneParams.ai
REACT_APP_COMPANY_EMAIL=contact@tuneparams.com
REACT_APP_COMPANY_PHONE=+1-555-0123
REACT_APP_WEBSITE_URL=https://www.tuneparams.ai
